bindsym $mod+bracketleft		gaps inner all set 10; gaps outer all set 5; gaps top all set 10; gaps bottom all set 0
bindsym $mod+bracketright		gaps inner all set 0; gaps outer all set 0

bindsym $mod+y					resize shrink width 25 px or 1 ppt
bindsym $mod+u					resize grow height 25 px or 1 ppt
bindsym $mod+i					resize shrink height 25 px or 1 ppt
bindsym $mod+o					resize grow width 25 px or 1 ppt
bindsym $mod+Shift+y			resize shrink width 100 px or 4 ppt
bindsym $mod+Shift+u			resize grow height 100 px or 4 ppt
bindsym $mod+Shift+i			resize shrink height 100 px or 4 ppt
bindsym $mod+Shift+o			resize grow width 100 px or 4 ppt

bindsym $mod+Shift+s			layout toggle split
bindsym $mod+a					focus child
bindsym $mod+Shift+a			focus parent

bindsym $mod+Shift+space		floating toggle
bindsym $mod+space				focus mode_toggle
